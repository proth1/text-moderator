{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '\\ntext-moderator SDLC Ready\\n---\\nPM Tool: GitHub Issues (#XXX)\\nBranch: feature/<issue>-description\\n---\\n'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(gh pr create:*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'PR creation detected'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(gh pr create:*)",
        "hooks": [
          {
            "type": "command",
            "command": "cd /Users/proth/repos/text-moderator && .claude/hooks/post-pr-creation.sh"
          }
        ]
      }
    ]
  }
}
