{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Moderation Decision",
  "type": "object",
  "required": ["submission_id", "model_name", "model_version", "category_scores", "automated_action"],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "submission_id": { "type": "string", "format": "uuid" },
    "model_name": { "type": "string" },
    "model_version": { "type": "string" },
    "category_scores": {
      "type": "object",
      "properties": {
        "toxicity": { "type": "number", "minimum": 0, "maximum": 1 },
        "hate": { "type": "number", "minimum": 0, "maximum": 1 },
        "harassment": { "type": "number", "minimum": 0, "maximum": 1 },
        "sexual_content": { "type": "number", "minimum": 0, "maximum": 1 },
        "violence": { "type": "number", "minimum": 0, "maximum": 1 },
        "profanity": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "policy_id": { "type": "string", "format": "uuid" },
    "policy_version": { "type": "integer" },
    "automated_action": { "type": "string", "enum": ["allow", "warn", "block", "escalate"] },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "explanation": { "type": "string" },
    "correlation_id": { "type": "string", "format": "uuid" }
  }
}
